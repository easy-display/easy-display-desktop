{
  "name": "easy-display-desktop",
  "version": "0.1.1",
  "description": "Easy Display, Desktop written with Electron / Typescript",
  "main": "dist/main.js",
  "build": {
    "asar": true,
    "productName": "EasyDisplay",
    "directories": {
      "output": "build",
      "buildResources": "dist"
    },
    "files": [
      "dist/*.js",
      "dist/**/*.js",
      "dist/*.html",
      "dist/**/*.html",
      "node_modules",
      "index.html",
      "assets/**/*"
    ],
    "mas": {
      "appId": "info.easydisplay.macos",
      "identity": "MOH OMAR TILLAWY (6P7N34Q286)",
      "category": "Utility",
      "icon": "assets/icons/mac/logo.icns",
      "type": "distribution"
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "copy-html-files": "rm -f dist/options.html; cp src/options.html ./dist/; rm -f dist/qr.html; cp src/qr.html ./dist/; rm -rf dist/about.html; cp src/about.html dist/; rm -rf dist/exec-js.html; cp src/exec-js.html dist/;",
    "start": "npm run build && ./node_modules/.bin/electron --inspect-brk=49492 ./dist/main.js",
    "pack": "electron-builder --dir",
    "clean-dist": "rm -rf build/*",
    "dist": "npm run clean-dist; npm run build; electron-builder --macos",
    "dev-dist": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder"
  },
  "repository": "https://github.com/electron/electron-quick-start-typescript",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "Mohammed O. Tillawy",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/electron-json-storage": "^4.0.0",
    "electron": "^3.0.0-beta.10",
    "electron-builder": "^20.28.4",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.3.1",
    "@types/socket.io-client": "^1.4.32",
    "axios": "^0.18.0",
    "bootstrap": "^4.1.3",
    "electron-json-storage": "^4.1.2",
    "electron-log": "^2.2.17",
    "es6-promise": "latest",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.4",
    "qrcode-generator": "^1.4.1",
    "query-string": "^6.1.0",
    "rxjs": "^6.3.2",
    "socket.io-client": "^2.1.1"
  }
}
